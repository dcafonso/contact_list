    <%= form.label 'Nome' %>
    <%= form.text_field :name, value: "", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'E-mail' %>
    <%= form.email_field :email, value: "", class: 'form-control' %>
